{% endif %}
{% if enable_tcp %}
listen=tcp:{{ listen_ip }}:{{ listen_udp_port }}
{% endif %}
{% if enable_tls %}
listen=tls:{{ listen_ip }}:{{ listen_tls_port }}
{% endif %}
{% if enable_ws %}
listen=ws:{{ listen_ip }}:{{ listen_ws_port }}
{% endif %}
{% if enable_wss %}
listen=wss:{{ listen_ip }}:{{ listen_wss_port }}
{% endif %}

